---
import type { GetStaticPaths } from "astro";
import BlogLayout from "@layouts/BlogLayout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";
import { Formatter } from "@/utils/formatter";

export const getStaticPaths = (async () => {
  const blogs = await getCollection("blog");

  // return [{
  // params: {slug:'post-01'},
  // props: {title:'Primer Post'}
  // }];
  return blogs.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post: post },
    };
  });
}) satisfies GetStaticPaths;

const { post } = Astro.props;
// const { slug } = Astro.params;
const frontmatter = post.data;
const {Content, headings} = await post.render();
const author = (await getEntry('author', post.data.author.id))?.data;
---

<BlogLayout title={frontmatter.title}>
    <h1 class="text-xs text-gray-500 mb-0">{frontmatter.title}</h1>
    <!-- <h1 class="text-md text-gray-400 mb-0">{frontmatter.author}</h1> -->
    <div class="text-md text-gray-400 mb-0 flex flex-row mt-2">
      <Image
        src={author!.avatar}
        class="rounded-full"
        alt={author!.name}
        width={50}
        height={50}
      />
      <div class="flex flex-col ml-5">
        <a href={`/blog/${frontmatter.author.id}`}>{author!.name}</a>
        <span class="text-xs text-gray-200">
          {Formatter.formatDate(frontmatter.date)}
        </span>
      </div>
    </div>

    <Image
      src={frontmatter.image}
      alt={`poster-${frontmatter.title}`}
      quality='low'
      width= {600}
      height={220}
      class='object-cover w-full h-[250px] my-5 rounded-md'
      transition:name={`${post.slug}-image`}
    />

    <h3>Tabla de contenido</h3>
    <ol>
        {
            headings.map((heading,index)=> (
                <li>
                    <a href={`#${heading.slug}`}>
                        {index+1} - {heading.text}
                    </a>
                </li>
            ))
        }
    </ol>

    <Content/>
    <div class="my-20">
      <a href="#btn-back">Ir arriba</a>
    </div>

  </BlogLayout>
