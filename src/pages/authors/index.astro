---
import { getCollection } from "astro:content";
import { SiteConfig } from "@/config/site-config";
import MainLayout from "@/layouts/MainLayout.astro";
import AuthorCard from "@/components/AuthorCard.astro";


// export const getStaticPaths = (async({paginate}) => {
//     const authors = await getCollection('author');
    
//     return paginate(authors,{pageSize:2});
// }) satisfies GetStaticPaths;

const authors = await getCollection('author');
---
<MainLayout title="Listado de autores">
  <section class="container px-6 py-10 mx-auto">
    <h1
      class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
    >
      {SiteConfig.title}
    </h1>
    <a href="/">Regresar</a>
  </section>
  {
      authors.map( (author ) => <AuthorCard author={author} />)
  }

</MainLayout>

<style>
  @import "tailwindcss";
  a{
    @apply text-blue-500 hover:overline
  }
</style>