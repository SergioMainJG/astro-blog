---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content'


interface Props{
    author: CollectionEntry<'author'>
}

const {author} = Astro.props;

---

<section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
  <div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
    <Image
      class="w-32 h-32 rounded-full mx-auto"
      src={author.data.avatar}
      alt="Profile picture"
      transition:name={`${author.id}-image`}
    />
    <h2 class="text-center text-2xl font-semibold mt-3">{author.id}</h2>
    <p class="text-center text-gray-600 mt-1">{author.data.subtitle}</p>
    <div class="flex justify-center mt-5">
      <a href={`https://x.com/${author.data.twitter}`} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
      <a href={author.data.linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
      <a href={author.data.github} class="text-blue-500 hover:text-blue-700 mx-3">Github</a>
    </div>
    <div class="mt-5">
      <h3 class="text-xl font-semibold">Bio</h3>
      <p class="text-gray-600 mt-2">
        {author.data.bio}
      </p>
      <div class="flex justify-end">
        <a href={`/blog/${author.id}`}>Leer MÃ¡s</a>
      </div>
    </div>
  </div>
</section>
